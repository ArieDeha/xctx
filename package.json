{
  "name": "xctx",
  "version": "0.3.2",
  "description": "Encrypted, signed, typed context propagation over a single HTTP header (`X-Context`) with NodeJS, Go and PHP reference implementations.",
  "private": false,
  "type": "module",

  "main": "dist/nodejs/cjs/index.js",
  "module": "dist/nodejs/esm/index.js",
  "types": "dist/nodejs/index.d.ts",

  "exports": {
    ".": {
      "types": "./dist/nodejs/index.d.ts",
      "import": "./dist/nodejs/esm/index.js",
      "require": "./dist/nodejs/cjs/index.js"
    }
  },

  "sideEffects": false,

  "files": [
    "dist/nodejs/**",
    "LICENSE-APACHE-2.0.txt",
    "README.md"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm:only": "npm run clean && tsc -p tsconfig.esm.json",
    "build:cjs:only": "npm run clean && tsc -p tsconfig.cjs.json",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "example:callee": "node example/callee/main.node.mjs",
    "example:caller": "node example/caller/main.node.mjs",
    "test": "vitest run --config vitest.config.ts",
    "coverage": "vitest run --config vitest.config.ts --coverage",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^2.1.9",
    "c8": "^10.1.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "peerDependencies": {
    "express": ">=4 || ^5.0.0"
  },
  "directories": {
    "example": "example",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArieDeha/xctx.git"
  },
  "keywords": [
    "context",
    "cross",
    "context",
    "cross-context",
    "x-context",
    "xcontext"
  ],
  "author": "Arieditya Pramadyana Deha <arieditya.prdh@live.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ArieDeha/xctx/issues"
  },
  "homepage": "https://github.com/ArieDeha/xctx#readme"
}
